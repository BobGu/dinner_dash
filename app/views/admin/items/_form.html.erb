<div class="form-group">
	<div class="span6 offset3">
		<%= form_for(@item, :html => { :class => "form-horizontal"}) do |f| %>

			<% if @item.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@item.errors.count, "error") %> prohibited this pie from being saved:</h2>

					<ul>
						<% @item.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<div class="form-group">
				<%= f.label :title, :class => "col-sm-1 control-label" %>
				<div class="col-sm-10">
					<%= f.text_field :title, class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :description, :class => "col-sm-1 control-label" %>
				<div class="col-sm-10">
					<%= f.text_field :description, class: "form-control" %>
				</div>
			</div>


			<div class="form-group">
				<%= f.label :price_pie, :class => "col-sm-1 control-label" %>
				<div class="col-sm-10">
					<%= f.text_field :price_pie, class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :categories, :class => "col-sm-1 control-label" %>
				<div class="col-sm-10">
					<%= f.select(:categories, options_from_collection_for_select(Category.all, "name", "name", @item.categories.pluck(:name)),
							{}, {multiple: true, size: Category.all.count}) %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :picture, :class => "col-sm-1 control-label" %>
				<div class="col-sm-10">
					<%= f.file_field :picture %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-1 col-sm-10">
					<div class="actions">
						<%= f.submit value="Save Changes", class: "btn btn-default" %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
