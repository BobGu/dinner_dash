<%= render :partial => "shared/header" %>
<h1>Our Dangerously Delicious Pies</h1>

<div class="content-wrapper">
	<table class="table">
		<thead>
			<tr>
				<th>Pie Name:</th>
				<th>Description:</th>
				<th>Price/Pie:</th>
				<th>Options:</th>
			</tr>
		</thead>

		<tbody>
			<% @items.each do |item| %>
				<tr>
					<td class='pie_title'><%= item.title %></td>
					<td class='pie_description'><%= item.description %></td>
					<td class='pie_price'><%= item.price_pie %></td>
					<td>
						<%= link_to 'Show', admin_item_path(item) %> |
						<%= link_to 'Edit', edit_admin_item_path(item) %> |
	      		<%= link_to 'Destroy', admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %> |
						<%= link_to 'Retire', admin_retire_item_path(item), method: :put, data: { confirm: 'Are you sure?' } %>
					</td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<%= link_to 'Create a New Item', new_admin_item_path %>
</div>
