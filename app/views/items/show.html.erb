<%= render :partial => "shared/header" %>

<h1 class='pie_title'><%= @item.title %></h1>


<a class="button" href="<%= add_to_cart_path(item_id: @item.id) %>"%>Add to cart</a>
<table class="table">
	<thead>
		<tr>
			<th>Pie Name:</th>
			<th>Description:</th>
			<th>Price/Slice:</th>
			<th>Price/Pie:</th>
			<th>Categories:</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td class='pie_title'><%= @item.title %></td>
			<td class='pie_description'><%= @item.description %></td>
			<td class='pie_price'><%= @item.price_slice %></td>
			<td class='pie_price'><%= @item.price_pie %></td>
			<td class='pie_category'>|
				<% @item.categories.each do |category| %>
					<%= link_to category.name, category_path(category) %> |
				<% end %>
			</td>
    </tr>
  </tbody>
</table>


<%= link_to 'Back to Menu', items_path %>
