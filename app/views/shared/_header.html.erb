<div class="navbar-wrapper">
  <div class="container">

    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Dangerously. Delicious. Pies', root_path, class: "navbar-brand" %>

        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Menu <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'All Items', items_path %></li>
                <li class="divider"></li>
                <li class="dropdown-header">View Items by Category</li>
                <% Category.all.each do |c| %>
                  <li><%= link_to c.name, category_path(c) %></li>
                <% end %>
              </ul>
            </li>
            <li><%= link_to 'Who We Are', about_us_path %></li>
            <li><%= link_to 'Cart', cart_path %></li>
            <li>
              <% if @cart_count != 0 %>
                <%= link_to "(#{@cart_count})", cart_path %>
              <% else %>
                <%= "" %>
              <% end %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Your Account <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Your Order History', current_user %></li>
                <% if current_user != nil && current_user.role == 'admin' %>
                  <li>
                    <%= link_to 'Admin Dashboard', admin_dashboard_path %>
                  </li>
                <% end %>
                <% if signed_in? %>
                  <li class= 'align_menu'>
                    <%= link_to 'Sign Out', signout_path, method: 'delete' %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to 'Sign in', signin_path %>
                  </li>
                <% end %>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>
